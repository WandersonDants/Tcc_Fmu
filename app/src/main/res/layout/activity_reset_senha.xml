<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cadastro"
    tools:context="com.example.wanderson.projeto.Activity.ResetSenha">

    <EditText
        android:id="@+id/ediEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btnResetSenha"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="73dp"
        android:backgroundTint="@android:color/holo_red_light"
        android:hint="E-mail"
        android:inputType="textEmailAddress"
        android:textColor="?android:attr/colorBackground"
        android:textColorHint="?android:attr/colorBackground" />


    <Button
        android:id="@+id/btnResetSenha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="221dp"
        android:backgroundTint="@android:color/holo_red_light"
        android:gravity="center"
        android:text="enviar"
        android:textColor="@android:color/background_light" />
</RelativeLayout>
