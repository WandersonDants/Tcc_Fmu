<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo"

    android:orientation="vertical"
    tools:context="com.example.wanderson.projeto.Activity.LoginActivity">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Posto Bom"
        android:textAlignment="center"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="36sp" />

    <EditText
        android:id="@+id/edEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:backgroundTint="@android:color/holo_red_dark"
        android:hint="E-mail"
        android:inputType="textEmailAddress"
        android:textColor="?android:attr/colorBackground"
        android:textColorHighlight="?android:attr/colorBackground"
        android:textColorHint="?android:attr/colorBackground"
        android:textColorLink="@android:color/holo_red_light" />

    <EditText
        android:id="@+id/edSenha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:backgroundTint="@android:color/holo_red_dark"
        android:hint="Senha"
        android:inputType="textPassword"
        android:textColor="?android:attr/colorBackground"
        android:textColorHint="?android:attr/colorBackground"
        android:textColorLink="?android:attr/colorBackground" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="28dp"
        android:background="@android:color/holo_red_light"
        android:text="Login"
        android:textColor="@android:color/background_light"
        android:textColorHint="@color/common_google_signin_btn_text_dark_pressed"
        android:textColorLink="@android:color/background_light" />

    <TextView
        android:id="@+id/edResetSenha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnLogin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        android:gravity="center"
        android:text="Esqueceu a senha ? click aqui!"
        android:textColor="@android:color/background_light"
        android:textSize="18sp" />

    <com.google.android.gms.common.SignInButton
        android:id="@+id/btnSignIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/tvAbreCadastro"
        android:layout_gravity="center"
        android:layout_marginTop="28dp"
        android:textAlignment="center">

    </com.google.android.gms.common.SignInButton>

    <TextView
        android:id="@+id/tvAbreCadastro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnLogin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        android:gravity="center"
        android:text="NÃ£o tem uma senha? crie uma!"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textColorLink="@color/colorPrimary"
        android:textSize="17sp" />


</LinearLayout>
